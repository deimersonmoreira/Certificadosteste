<script>
  const cursos = {
    graduacao: ["Direito", "Medicina", "Enfermagem", "Psicologia", "Administra√ß√£o", "Engenharia Civil", "Engenharia de Produ√ß√£o", "Arquitetura e Urbanismo", "Educa√ß√£o F√≠sica", "Pedagogia", "Ci√™ncias Cont√°beis", "Ci√™ncia da Computa√ß√£o", "Jornalismo", "Publicidade e Propaganda", "Farm√°cia", "Biomedicina", "Nutri√ß√£o", "Fisioterapia", "Servi√ßo Social", "Hist√≥ria"],
    pos: ["Direito Estudantil", "Direito Constitucional", "Gest√£o P√∫blica", "Educa√ß√£o Inclusiva", "Psicopedagogia", "Administra√ß√£o Hospitalar", "Gest√£o Escolar", "Neuropsicologia", "Doc√™ncia do Ensino Superior", "MBA em Marketing", "MBA em Finan√ßas", "Psican√°lise", "Direito Tribut√°rio", "Direito do Trabalho", "Gest√£o de Projetos", "Direito Civil", "Seguran√ßa do Trabalho", "Engenharia de Seguran√ßa", "Sa√∫de Coletiva", "Per√≠cia Criminal"]
  };

  function atualizarCursos() {
    const nivel = document.getElementById("nivel").value;
    const cursoSelect = document.getElementById("curso");
    cursoSelect.innerHTML = "<option value=''>Selecione</option>";
    if (cursos[nivel]) {
      cursos[nivel].forEach(curso => {
        const opt = document.createElement("option");
        opt.value = curso;
        opt.textContent = curso;
        cursoSelect.appendChild(opt);
      });
    }
  }

  function gerarCertificacao() {
    const nome = document.getElementById('nome').value;
    const cpf = document.getElementById('cpf').value;
    const matricula = document.getElementById('matricula').value;
    const nivel = document.getElementById('nivel').value;
    const curso = document.getElementById('curso').value;

    const hoje = new Date();
    const dataFormatada = hoje.toLocaleDateString('pt-BR');

    const duracoes = { graduacao: 4, pos: 2 };
    const anosCurso = duracoes[nivel] || 2;

    const ingressoAno = hoje.getFullYear() - 1;
    const conclusaoAno = ingressoAno + anosCurso;

    const codigo = `UNB-${matricula}-${cpf.replace(/\\D/g, '')}-${hoje.getFullYear()}${hoje.getMonth()+1}${hoje.getDate()}`;
    const url = `https://brasiluniversidade.com.br/verificar?codigo=${codigo}`;

    document.getElementById('dataHoje').textContent = dataFormatada;
    document.getElementById('dataHojeRepetida').textContent = dataFormatada;
    document.getElementById('codigoAutenticacao').textContent = codigo;
    QRCode.toCanvas(document.getElementById("qrcode"), codigo, { width: 120 });

    const texto = `Certifico, para os devidos fins, que <strong>${nome}</strong>, CPF n¬∫ <strong>${cpf}</strong>, encontra-se regularmente matriculado no curso de <strong>${curso}</strong>, modalidade <strong>${nivel === 'pos' ? 'P√≥s-gradua√ß√£o (EaD)' : 'Gradua√ß√£o (Presencial)'}</strong>, da <strong>Universidade Nacional do Brasil</strong>, sob o n√∫mero de matr√≠cula <strong>${matricula}</strong>. O referido estudante possui data de ingresso em <strong>${ingressoAno}</strong> e previs√£o de conclus√£o para o ano de <strong>${conclusaoAno}</strong>.`;

    document.getElementById('textoCertificacao').innerHTML = texto;
    document.getElementById('formulario').classList.add('hidden');
    document.getElementById('certificacao').classList.remove('hidden');
  }

  function gerarPDF() {
    const element = document.getElementById("certificacao");
    const opt = {
      margin: [1.5, 1.5, 1.5, 1.5],
      filename: 'Certificacao-Academica.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 3, useCORS: true },
      jsPDF: { unit: 'cm', format: 'a4', orientation: 'portrait' }
    };
    html2pdf().from(element).set(opt).save();
  }

  function abrirPopup() {
    document.getElementById("popup").style.display = "flex";
  }

  function fecharPopup() {
    document.getElementById("popup").style.display = "none";
  }
</script>

